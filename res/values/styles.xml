<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InitActionBarTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainAndWebViewActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="CustomActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/gpcard_image_bg_green</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <!-- Calligraphy -->
    <style name="InitTextGeekyStyle" parent="android:TextAppearance">
        <item name="fontPath">@string/init_font_path</item>
    </style>

</resources>
