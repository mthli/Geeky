<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- ListBuddies -->
    <declare-styleable name="SelectorOptions">

        <attr name="selectorColor" format="color" />

    </declare-styleable>

    <!-- ListBuddies -->
    <declare-styleable name="ListBuddiesOptions">

        <attr name="gap" format="reference" />
        <attr name="gapColor" format="color" />
        <attr name="speed" format="integer" />
        <attr name="listsDivider" format="reference" />
        <attr name="listsDividerHeight" format="reference" />

        <attr name="autoScrollFaster" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>

        <attr name="scrollFaster" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>

    </declare-styleable>

    <!-- Calligraphy -->
    <attr name="fontPath" format="string"/>

</resources>
