<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fitsSystemWindows="true"
                android:clipToPadding="false"

                android:background="@color/gpcard_image_bg_green">

    <ImageView android:id="@+id/init_geeky"
               android:contentDescription="@string/init_img_cd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingBottom="256dp"
               android:src="@drawable/geeky"
               android:layout_centerInParent="true">
    </ImageView>

    <TextView android:id="@+id/init_introduction"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:paddingBottom="170dp"
              android:text="@string/init_text_introduction"
              android:textSize="12sp"
              android:textColor="@color/init_introduction_color">
    </TextView>

</RelativeLayout>